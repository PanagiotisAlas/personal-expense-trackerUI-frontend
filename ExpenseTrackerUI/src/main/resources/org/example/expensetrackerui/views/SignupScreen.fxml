<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.expensetrackerui.controllers.SignupController"
             spacing="15" alignment="CENTER" styleClass="login-vbox"
             prefHeight="400.0" prefWidth="600.0">

    <Text text="Personal Expense Tracker" styleClass="signup-heading"/>
    <Text text="Create your account" styleClass="signup-subheading"/>
    <MFXTextField fx:id="fullNameField" promptText="Enter your Full Name" />
    <MFXTextField fx:id="usernameField" promptText="Enter your Username" />
    <MFXPasswordField fx:id="passwordField" promptText="Enter your password"/>
    <MFXButton text="Sign up" fx:id="signupButton" onAction="#handleSignup" styleClass="mfx-button"/>

    <Text text="Already have an account? Login" styleClass="link-text" onMouseClicked="#handleLogin"/>

</VBox>
